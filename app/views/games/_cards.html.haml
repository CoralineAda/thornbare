.card-column
  - current_player.resources.sort_by(&:value).each_with_index do |card, i|
    .card{ style: "top: #{60 * i}px; left: #{0 + rand(20) * [1,-1].sample}px;" }
      = image_tag "/assets/cards/#{card.card}"

